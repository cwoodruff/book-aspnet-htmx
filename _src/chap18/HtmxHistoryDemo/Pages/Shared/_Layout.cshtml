<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - htmx History Demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://unpkg.com/htmx.org@2.0.7"></script>
    <script src="https://unpkg.com/hyperscript.org@0.9.14"></script>
    <style>
        .tab-content {
            display: none;
        }
        .tab-content.active {
            display: block;
        }
        .btn-tab {
            background: #e9ecef;
            border: 1px solid #dee2e6;
            color: #495057;
        }
        .btn-tab.active {
            background: #0d6efd;
            color: white;
            border-color: #0d6efd;
        }
        .scrollable-content {
            height: 400px;
            overflow-y: scroll;
            border: 1px solid #dee2e6;
            padding: 1rem;
            background: #f8f9fa;
        }
        .cart-summary {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #28a745;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            z-index: 1000;
        }
        .product-card {
            transition: transform 0.2s;
        }
        .product-card:hover {
            transform: translateY(-2px);
        }
        .debug-info {
            position: fixed;
            bottom: 20px;
            left: 20px;
            background: #17a2b8;
            color: white;
            padding: 10px;
            border-radius: 5px;
            font-size: 0.8em;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <header class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">htmx History Demo</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Search">Search Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Dashboard">Dashboard</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    
    <!-- Cart Summary - Not cached -->
    <div class="cart-summary">
        Cart: <span id="cart-count">3</span> items
    </div>
    
    <!-- Debug Info -->
    <div class="debug-info" hx-ext="debug">
        htmx Debug: Check browser console
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>