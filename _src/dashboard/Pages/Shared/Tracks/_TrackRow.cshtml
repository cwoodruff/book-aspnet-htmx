@model Track

<tr id="track-row-@Model.Id" class="hover:bg-gray-50">
    <td class="w-10 px-4 py-3">
        <input type="checkbox" 
               name="selectedTracks" 
               value="@Model.Id"
               class="rounded border-gray-300"
               _="on change
                  set anyChecked to (<input[type='checkbox'][name='selectedTracks']:checked/> in closest <table/>).length > 0
                  if anyChecked
                    remove .hidden from #bulk-actions
                  else
                    add .hidden to #bulk-actions
                  end" />
    </td>
    <td class="px-4 py-3">
        <div class="text-sm font-medium text-gray-900">@Model.Name</div>
        @if (!string.IsNullOrEmpty(Model.Composer))
        {
            <div class="text-xs text-gray-500">by @Model.Composer</div>
        }
    </td>
    <td class="px-4 py-3">
        <div class="text-sm text-gray-900">@(Model.Album?.Artist.Name ?? "Unknown")</div>
        <div class="text-xs text-gray-500">@(Model.Album?.Title ?? "Unknown album")</div>
    </td>
    <td class="px-4 py-3">
        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-800">
            @(Model.Genre?.Name ?? "Unknown")
        </span>
    </td>
    <td class="px-4 py-3 text-sm text-gray-500">
        @Model.Duration
    </td>
    <td class="px-4 py-3 text-sm text-gray-500">
        @Model.UnitPrice.ToString("C")
    </td>
    <td class="px-4 py-3 text-right text-sm font-medium">
        <div class="flex justify-end gap-2">
            <button type="button"
                    class="btn-icon text-blue-600 hover:text-blue-800"
                    hx-get="/Tracks?handler=Edit&id=@Model.Id"
                    hx-target="#track-row-@Model.Id"
                    hx-swap="outerHTML"
                    title="Edit">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </button>
            <button type="button"
                    class="btn-icon text-red-600 hover:text-red-800"
                    hx-delete="/Tracks?handler=&id=@Model.Id"
                    hx-target="#track-row-@Model.Id"
                    hx-swap="delete"
                    hx-confirm="Are you sure you want to delete this track?"
                    title="Delete">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
            </button>
        </div>
    </td>
</tr>
