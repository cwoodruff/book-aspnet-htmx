@model Track
@{
    var genres = ViewData["Genres"] as IEnumerable<Genre> ?? Enumerable.Empty<Genre>();
    var albums = ViewData["Albums"] as IEnumerable<Album> ?? Enumerable.Empty<Album>();
}

<div class="modal-backdrop fixed inset-0 bg-black bg-opacity-50 z-40"
     _="on click trigger closeModal"></div>
     
<div class="modal fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="modal-content bg-white rounded-lg shadow-xl max-w-lg w-full"
         _="on closeModal remove .modal-backdrop from previous <div/> then remove closest .modal">
        
        <div class="px-6 py-4 border-b">
            <h3 class="text-lg font-semibold text-gray-900">
                @(Model.Id == 0 ? "Add New Track" : "Edit Track")
            </h3>
        </div>
        
        <form hx-post="/Tracks?handler=@(Model.Id == 0 ? "Create" : $"Update&id={Model.Id}")"
              hx-target="#track-list tbody"
              hx-swap="afterbegin"
              class="p-6">
            @Html.AntiForgeryToken()
            
            <div class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                        Track Name
                    </label>
                    <input type="text"
                           id="name"
                           name="name"
                           value="@Model.Name"
                           class="input w-full"
                           placeholder="Enter track name"
                           required
                           autofocus />
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="albumId" class="block text-sm font-medium text-gray-700 mb-1">
                            Album
                        </label>
                        <select id="albumId" name="albumId" class="input w-full">
                            <option value="">No album</option>
                            @foreach (var album in albums)
                            {
                                <option value="@album.Id" selected="@(album.Id == Model.AlbumId)">
                                    @album.Title (@album.Artist.Name)
                                </option>
                            }
                        </select>
                    </div>
                    
                    <div>
                        <label for="genreId" class="block text-sm font-medium text-gray-700 mb-1">
                            Genre
                        </label>
                        <select id="genreId" name="genreId" class="input w-full">
                            <option value="">No genre</option>
                            @foreach (var genre in genres)
                            {
                                <option value="@genre.Id" selected="@(genre.Id == Model.GenreId)">
                                    @genre.Name
                                </option>
                            }
                        </select>
                    </div>
                </div>
                
                <div>
                    <label for="composer" class="block text-sm font-medium text-gray-700 mb-1">
                        Composer
                    </label>
                    <input type="text"
                           id="composer"
                           name="composer"
                           value="@Model.Composer"
                           class="input w-full"
                           placeholder="Enter composer (optional)" />
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label for="milliseconds" class="block text-sm font-medium text-gray-700 mb-1">
                            Duration (milliseconds)
                        </label>
                        <input type="number"
                               id="milliseconds"
                               name="milliseconds"
                               value="@(Model.Milliseconds > 0 ? Model.Milliseconds : 180000)"
                               class="input w-full"
                               min="0"
                               required />
                    </div>
                    
                    <div>
                        <label for="unitPrice" class="block text-sm font-medium text-gray-700 mb-1">
                            Unit Price
                        </label>
                        <input type="number"
                               id="unitPrice"
                               name="unitPrice"
                               value="@(Model.UnitPrice > 0 ? Model.UnitPrice : 0.99m)"
                               class="input w-full"
                               step="0.01"
                               min="0"
                               required />
                    </div>
                </div>
            </div>
            
            <div class="mt-6 flex justify-end gap-3">
                <button type="button"
                        class="btn btn-secondary"
                        _="on click trigger closeModal">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                    @(Model.Id == 0 ? "Create Track" : "Save Changes")
                </button>
            </div>
        </form>
    </div>
</div>
