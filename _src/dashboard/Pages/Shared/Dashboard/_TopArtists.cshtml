@model IEnumerable<Artist>

<div class="bg-white rounded-lg shadow-sm p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Top Artists by Albums</h2>
    
    @if (Model.Any())
    {
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            @foreach (var artist in Model)
            {
                <a href="/Albums?artistId=@artist.Id" 
                   class="block p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                    <div class="text-center">
                        <div class="w-12 h-12 mx-auto bg-blue-100 rounded-full flex items-center justify-center mb-2">
                            <span class="text-lg font-bold text-blue-600">@artist.Name[0]</span>
                        </div>
                        <p class="text-sm font-medium text-gray-900 truncate">@artist.Name</p>
                        <p class="text-xs text-gray-500">@artist.Albums.Count albums</p>
                    </div>
                </a>
            }
        </div>
    }
    else
    {
        <p class="text-gray-500 text-center py-4">No artists found</p>
    }
</div>
