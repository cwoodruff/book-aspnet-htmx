@model Artist

<tr id="artist-row-@Model.Id" class="hover:bg-gray-50">
    <td class="px-6 py-4 whitespace-nowrap">
        <div class="flex items-center">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                <span class="text-sm font-medium text-blue-600">@Model.Name[0]</span>
            </div>
            <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">@Model.Name</div>
            </div>
        </div>
    </td>
    <td class="px-6 py-4 whitespace-nowrap">
        <a href="/Albums?artistId=@Model.Id" class="text-sm text-blue-600 hover:text-blue-800">
            @Model.Albums.Count albums
        </a>
    </td>
    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
        <div class="flex justify-end gap-2">
            <button type="button"
                    class="btn-icon text-blue-600 hover:text-blue-800"
                    hx-get="/Artists?handler=Edit&id=@Model.Id"
                    hx-target="#artist-row-@Model.Id"
                    hx-swap="outerHTML"
                    title="Edit">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
            </button>
            <button type="button"
                    class="btn-icon text-red-600 hover:text-red-800"
                    hx-get="/Artists?handler=ConfirmDelete&id=@Model.Id"
                    hx-target="#modal-container"
                    hx-swap="innerHTML"
                    title="Delete">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
            </button>
        </div>
    </td>
</tr>
