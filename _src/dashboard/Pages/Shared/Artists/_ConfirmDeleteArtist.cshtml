@model Artist

<div class="modal-backdrop fixed inset-0 bg-black bg-opacity-50 z-40"
     _="on click trigger closeModal"></div>
     
<div class="modal fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="modal-content bg-white rounded-lg shadow-xl max-w-md w-full"
         _="on closeModal remove .modal-backdrop from previous <div/> then remove closest .modal">
        
        <div class="p-6">
            <div class="flex items-center justify-center w-12 h-12 mx-auto bg-red-100 rounded-full mb-4">
                <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>
            
            <h3 class="text-lg font-semibold text-gray-900 text-center mb-2">
                Delete Artist
            </h3>
            
            <p class="text-sm text-gray-600 text-center mb-6">
                Are you sure you want to delete <strong>@Model.Name</strong>? 
                This action cannot be undone.
                @if (Model.Albums.Any())
                {
                    <span class="text-red-600">This artist has @Model.Albums.Count album(s) that may also be affected.</span>
                }
            </p>
            
            <div class="flex justify-center gap-3">
                <button type="button"
                        class="btn btn-secondary"
                        _="on click trigger closeModal">
                    Cancel
                </button>
                <button type="button"
                        class="btn btn-danger"
                        hx-delete="/Artists?handler=&id=@Model.Id"
                        hx-target="#artist-row-@Model.Id"
                        hx-swap="delete"
                        _="on htmx:afterRequest trigger closeModal">
                    Delete Artist
                </button>
            </div>
        </div>
    </div>
</div>
