@model Artist

<div class="modal-backdrop fixed inset-0 bg-black bg-opacity-50 z-40"
     _="on click trigger closeModal"></div>
     
<div class="modal fixed inset-0 z-50 flex items-center justify-center p-4">
    <div class="modal-content bg-white rounded-lg shadow-xl max-w-md w-full"
         _="on closeModal remove .modal-backdrop from previous <div/> then remove closest .modal">
        
        <div class="px-6 py-4 border-b">
            <h3 class="text-lg font-semibold text-gray-900">
                @(Model.Id == 0 ? "Add New Artist" : "Edit Artist")
            </h3>
        </div>
        
        <form hx-post="/Artists?handler=@(Model.Id == 0 ? "Create" : $"Update&id={Model.Id}")"
              hx-target="@(Model.Id == 0 ? "#artist-list tbody" : $"#artist-row-{Model.Id}")"
              hx-swap="@(Model.Id == 0 ? "afterbegin" : "outerHTML")"
              class="p-6">
            @Html.AntiForgeryToken()
            
            <div class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                        Artist Name
                    </label>
                    <input type="text"
                           id="name"
                           name="name"
                           value="@Model.Name"
                           class="input w-full"
                           placeholder="Enter artist name"
                           required
                           autofocus />
                </div>
            </div>
            
            <div class="mt-6 flex justify-end gap-3">
                <button type="button"
                        class="btn btn-secondary"
                        _="on click trigger closeModal">
                    Cancel
                </button>
                <button type="submit" class="btn btn-primary">
                    @(Model.Id == 0 ? "Create Artist" : "Save Changes")
                </button>
            </div>
        </form>
    </div>
</div>
